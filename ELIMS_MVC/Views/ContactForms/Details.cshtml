@model ELIMS_MVC.Models.ContactForm

@{
    ViewData["Title"] = "Message Details";
}

<h2>@ViewData["Title"]</h2>

    <hr />

    <fieldset id="deleterequest" style="display:block; margin: 0 2px; border:1px solid #c0c0c0; padding: .35em .625em .75em;">
        <legend style="background-color: #4BB721; display:table; max-width:100%; padding: 3px 6px; color:#fff; white-space:normal;"><b>Message Details</b></legend>
        <table class="table table-striped">
            <tbody>
                <tr>
                    <td>
                        <b>
                            @Html.DisplayNameFor(model => model.ContactDate)
                        </b>
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.ContactDate)
                    </td>
                </tr>
                <tr>
                    <td>
                        <b>
                            @Html.DisplayNameFor(model => model.CFirstName)
                        </b>
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.CFirstName)
                    </td>
                </tr>
                <tr>
                    <td>
                        <b>
                            @Html.DisplayNameFor(model => model.CLastName)
                        </b>
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.CLastName)
                    </td>
                </tr>
                <tr>
                    <td>
                        <b>
                            @Html.DisplayNameFor(model => model.CEmail)
                        </b>
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.CEmail)
                    </td>
                </tr>
                <tr>
                    <td>
                        <b>
                            @Html.DisplayNameFor(model => model.Topic)
                        </b>
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.Topic)
                    </td>
                </tr>
                <tr>
                    <td>
                        <b>
                            @Html.DisplayNameFor(model => model.Message)
                        </b>
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.Message)
                    </td>
                </tr>

            </tbody>
        </table>

<div class="form-group">
    <a class="btn btn-success" href="/ContactForms/Index" role="button">Back to list</a>
</div>

</fieldset>