@model ELIMS_MVC.Models.Request

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Request</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            <div class="form-group">
                <label asp-for="StartDate" class="control-label"></label>
                <input asp-for="StartDate" class="form-control" />
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EndDate" class="control-label"></label>
                <input asp-for="EndDate" class="form-control" />
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RequestMade" class="control-label"></label>
                <input asp-for="RequestMade" class="form-control" />
                <span asp-validation-for="RequestMade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control" style="padding: 0px 5px;" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" style="padding: 0px 5px;" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NAUEmail" class="control-label"></label>
                <input asp-for="NAUEmail" class="form-control" style="padding: 0px 5px;"/>
                <span asp-validation-for="NAUEmail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProjectName" class="control-label"></label>
                <input asp-for="ProjectName" class="form-control" style="padding: 0px 5px;"/>
                <span asp-validation-for="ProjectName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProjectObjective" class="control-label"></label>
                <input asp-for="ProjectObjective" class="form-control" style="padding: 0px 5px;"/>
                <span asp-validation-for="ProjectObjective" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ContactName" class="control-label"></label>
                <input asp-for="ContactName" class="form-control" style="padding: 0px 5px;"/>
                <span asp-validation-for="ContactName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Funding" class="control-label"></label>
                <input asp-for="Funding" class="form-control" style="padding: 0px 5px;"/>
                <span asp-validation-for="Funding" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SponsorName" class="control-label"></label>
                <input asp-for="SponsorName" class="form-control" style="padding: 0px 5px;"/>
                <span asp-validation-for="SponsorName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SponsorPhone" class="control-label"></label>
                <input asp-for="SponsorPhone" class="form-control" style="padding: 0px 5px;"/>
                <span asp-validation-for="SponsorPhone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SponsorEmail" class="control-label"></label>
                <input asp-for="SponsorEmail" class="form-control" style="padding: 0px 5px;"/>
                <span asp-validation-for="SponsorEmail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Chemicals" class="control-label"></label>
                <input asp-for="Chemicals" class="form-control" style="padding: 0px 5px;"/>
                <span asp-validation-for="Chemicals" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MeetingTimes" class="control-label">Potential Meeting Times</label>
                <textarea asp-for="MeetingTimes" class="form-control" id="MeetingTimes" style="padding: 0px 5px;"></textarea>
                <span asp-validation-for="MeetingTimes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GroupMembers" class="control-label">Group Members</label>
                <textarea asp-for="GroupMembers" class="form-control" id="GroupMembers" style="padding: 0px 5px;"></textarea>
                <span asp-validation-for="GroupMembers" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProjectFile" class="control-label">If you have a project file, please attach it now.</label>
                <input asp-for="ProjectFile" type="file" class="form-control-file" />
            </div>
            @if (User.IsInRole(Constants.ELIMSAdministratorsRole) || User.IsInRole(Constants.ELIMSManagersRole))

            {
                <div class="form-group">
                    <label asp-for="Status" class="control-label"></label>
                    <select asp-for="Status" class="form-control" id="Status">
                        <option>Denied</option>
                        <option>Approved</option>
                        <option>Pending</option>
                    </select>
                    <span asp-validation-for="Status" class="text-danger"></span>
                </div>
            }
                <div class="form-group">
                    <button type="submit" class="btn btn-primary"><b>Save</b></button>
                </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
