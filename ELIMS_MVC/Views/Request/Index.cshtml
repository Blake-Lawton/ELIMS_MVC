                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                @*<td>
                        @Html.DisplayFor(modelItem => item.UserId)
                    </td>*@
                @*<td>
                        @Html.DisplayFor(modelItem => item.StartDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EndDate)
                    </td>*@
                <td>
                    @Html.DisplayFor(modelItem => item.RequestMade)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NAUEmail)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProjectName)
                </td>
                @*<td>
                        @Html.DisplayFor(modelItem => item.ProjectObjective)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ContactName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ContactID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Funding)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SponsorName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SponsorPhone)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SponsorEmail)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Chemicals)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MeetingTimes)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.GroupMembers)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ProjectFile)
                    </td>*@
                @if (item.Status == RequestStatus.Approved)
                {
                    <td style="background-color:#CEF6CE">
                        @Html.DisplayFor(modelItem => item.Status)
                    </td>
                }
                else if (item.Status == RequestStatus.Denied)
                {
                    <td style="background-color:#F6CECE">
                        @Html.DisplayFor(modelItem => item.Status)
                    </td>

                }
                else if (item.Status == RequestStatus.Pending)
                {
                    <td style="background-color:#F5F6CE">
                        @Html.DisplayFor(modelItem => item.Status)
                    </td>
                }
                <td>

                    <a asp-controller="Request" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    <text> | </text>

                    <a asp-action="Details" asp-route-id="@item.Id">Details</a>

                    @if (User.IsInRole(Constants.ELIMSAdministratorsRole) || User.IsInRole(Constants.ELIMSManagersRole))

                    {
                        <text> | </text>
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    }


                </td>

                @*<td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>*@
            </tr>
        }
    </tbody>
</table>
