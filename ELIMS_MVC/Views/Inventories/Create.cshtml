@model ELIMS_MVC.Models.Inventory

@{
    ViewData["Title"] = "Create";
}
<link rel="stylesheet" href="~/css/site.css">


<h2>Create</h2>

<hr />
<fieldset id="requestform" style="display:block; margin: 0 2px; border:1px solid #c0c0c0; padding: .35em .625em .75em;">
    <legend style="background-color: #4BB721; display:table; max-width:100%; padding: 3px 6px; color:#fff; white-space:normal;"><b>Create New Inventory Item</b></legend>

    <div class="row">
        <div class="col-md-8">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" placeholder="Chloroform"/>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CASNum" class="control-label"></label>
                    <input asp-for="CASNum" class="form-control" aria-describedby="casHelp" placeholder="67-66-3" />
                    <span asp-validation-for="CASNum" class="text-danger"></span>
                    @*<small id="casHelp" class="form-text text-muted">Ex: 7732-18-5</small>*@
                </div>
                <div class="form-group">
                    <label asp-for="Manufacturer" class="control-label"></label>
                    <input asp-for="Manufacturer" class="form-control" placeholder="Mallinckrodt"/>
                    <span asp-validation-for="Manufacturer" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="checkbox">
                        <label>
                            <input asp-for="HasMSDS" /> @Html.DisplayNameFor(model => model.HasMSDS)
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="HealthHazard" class="control-label"></label>
                    <input asp-for="HealthHazard" class="form-control" placeholder="2" />
                    <span asp-validation-for="HealthHazard" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="FlammableHazard" class="control-label"></label>
                    <input asp-for="FlammableHazard" class="form-control" placeholder="0"/>
                    <span asp-validation-for="FlammableHazard" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ReactiveHazard" class="control-label"></label>
                    <input asp-for="ReactiveHazard" class="form-control" placeholder="0"/>
                    <span asp-validation-for="ReactiveHazard" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="OtherHazard" class="control-label"></label>
                    <input asp-for="OtherHazard" class="form-control" />
                    <span asp-validation-for="OtherHazard" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CurrentQty" class="control-label"></label>
                    <input asp-for="CurrentQty" class="form-control" placeholder="1" />
                    <span asp-validation-for="CurrentQty" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Unit" class="control-label"></label>
                    <input asp-for="Unit" class="form-control" placeholder="lb"/>
                    <span asp-validation-for="Unit" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DateReceived" class="control-label"></label>
                    <input asp-for="DateReceived" class="form-control" aria-describedby="receivedHelp" />
                    <span asp-validation-for="DateReceived" class="text-danger"></span>
                    <small id="receivedHelp" class="form-text text-muted">Must come before date checked out or date returned, if relevant</small>
                </div>
                <div class="form-group">
                    <div class="checkbox">
                        <label>
                            <input asp-for="IsCheckedOut" /> @Html.DisplayNameFor(model => model.IsCheckedOut)
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="DateCheckedOut" class="control-label"></label>
                    <input asp-for="DateCheckedOut" class="form-control" aria-describedby="checkedOutHelp" />
                    <span asp-validation-for="DateCheckedOut" class="text-danger"></span>
                    <small id="checkedOutHelp" class="form-text text-muted">Must be filled in if you have marked this chemical as checked out, and it must be before the dates for returned</small>
                </div>
                <div class="form-group">
                    <label asp-for="DateReturned" class="control-label"></label>
                    <input asp-for="DateReturned" class="form-control" aria-describedby="returnedHelp" />
                    <span asp-validation-for="DateReturned" class="text-danger"></span>
                    <small id="returnedHelp" class="form-text text-muted">Must come after the date received and the date checked out</small>
                </div>
                <div class="form-group">
                    <label asp-for="Location" class="control-label"></label>
                    <select asp-for="Location" class="form-control" id="Location">
                        <option>241A</option>
                        <option>241 - Flammable</option>
                        <option>241 - Bases</option>
                        <option>243 - Acids</option>
                        <option>243 - Flammable</option>
                        <option>AMBL (239)</option>
                        <option>Inst. Lab (241)</option>
                        <option>Out</option>
                    </select>
                    <span asp-validation-for="Location" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="checkbox">
                        <label>
                            <input asp-for="Consumed" aria-describedby="consumedHelp" /> @Html.DisplayNameFor(model => model.Consumed)
                        </label>
                        <small id="consumedHelp" class="form-text text-muted">Check if the chemical has been consumed</small>
                    </div>
                </div>
                <div class="form-group">
                    <div class="checkbox">
                        <label>
                            <input asp-for="HazWaste" aria-describedby="hazWasteHelp" /> @Html.DisplayNameFor(model => model.HazWaste)
                        </label>
                        <small id="hazWasteHelp" class="form-text text-muted">Check if the chemical has been marked as hazardous waste</small>
                    </div>
                </div>
                <div class="form-group">
                    <div class="checkbox">
                        <label>
                            <input asp-for="Disposed" aria-describedby="disposedHelp" /> @Html.DisplayNameFor(model => model.Disposed)
                        </label>
                        <small id="disposedHelp" class="form-text text-muted">Check if the chemical has been disposed of</small>
                    </div>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-success"><b>Create</b></button>
                </div>
            </form>
        </div>
    </div>
    <div>
        <a asp-action="Index">Back to List</a>
    </div>
</fieldset>


